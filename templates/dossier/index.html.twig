{% extends 'base.html.twig' %}

{% block body %}

<div class="example-wrapper">
   {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }} 
            </div>
    {% endfor %}
    <h1>Liste des dossiers</h1>

    {% for dossier in dossiers %}

    <div>
        <p>Nom : {{ dossier.email}}</p>
        {% if dossier.statut is same as("begin") %}
        <a href="{{ path('folderEmail', {'id': dossier.privateId}) }}">Envoyer un email à cet utilisateur</a>
        {% elseif dossier.statut is same as("DONE") %}
        <a href="{{ path('folderValidate', {'id': dossier.privateId}) }}">Valider ce dossier</a>
        <p> Élément du dossier :</p>
        <a href="{{ asset('uploads/' ~ dossier.cni ~ '') }}">CNI<a><br/>
        <a href="{{ asset('uploads/' ~ dossier.pdf ~ '') }}">PDF adoption<a>
        {% elseif dossier.statut is same as("ACCEPTED") %}
        <p> Élément du dossier :</p>
        <a href="{{ asset('uploads/' ~ dossier.cni ~ '') }}">CNI<a><br/>
        <a href="{{ asset('uploads/' ~ dossier.pdf ~ '') }}">PDF adoption<a>
        <p>Ce dossier a été validé !</p>

        {% endif %}
        

    <div>
    <br/> 
    <br/>
    <br/>

    {% endfor %}
</div>

{% endblock %}
